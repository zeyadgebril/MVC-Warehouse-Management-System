
@model WarehouseNameLocationProductsListVM;
@{
    ViewData["Title"] = "Create";
    Layout = "_DashboardLayout";

}
<body class="bg-black"></body>
<div class="container p-4 text-white bg-black">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card rounded-4 p-4" style="background-color:#3f474f; border: 2px solid #0d6efd;">
                <h4 class="mb-4 text-light">
                    <i class="bi bi-plus-circle"></i> Add New Warehouse
                </h4>

                <form asp-action="Create" asp-controller="Warehouse" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-light"></label>
                        <input asp-for="Name" class="form-control bg-dark text-light border-primary" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label text-light"></label>
                        <input asp-for="Location" class="form-control bg-dark text-light border-primary" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label text-light"></label>
                        <input asp-for="Phone" class="form-control bg-dark text-light border-primary" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <button type="submit" class="btn text-light" style="background-color:#0d6efd;">
                            <i class="bi bi-save"></i> Save Warehouse
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
