@model List<Warehouse_Management_System.Models.Category>

<table class="table table-hover" style="margin-bottom: 0; color: #ffffff;">
    <thead style="background-color: #25273d;">
        <tr>
            <th style="padding: 16px 25px;">Name</th>
            <th style="padding: 16px 25px;">Description</th>
            <th style="padding: 16px 25px; text-align: right;">Actions</th>
        </tr>
    </thead>
    <tbody >
        @foreach (var category in Model)
        {
            <tr style="border-bottom: 1px solid #3d3f5e;">
                <td style="padding: 16px 25px;">@category.Name</td>
                <td style="padding: 16px 25px; color: #b0b0b0;">@category.Description</td>
                <td style="padding: 16px 25px; text-align: right;">
                    <a class="btn btn-sm glow-on-hover"
                       style="background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
                              color: white; border: none; border-radius: 20px;
                              padding: 6px 15px; min-width: 90px;"
                       asp-action="Details"
                       asp-route-id="@category.CategoryID">
                        <i class="fas fa-eye" style="margin-right: 5px;"></i>
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
