@{
    ViewData["Title"] = "New";
}

<body style="background-color: #1f2937; min-height: 100vh;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow" style="background-color: #4b5563;">
                    <div class="card-body p-4">
                        <h1 class="text-center text-light mb-4">Add Supplier</h1>

                        <form method="post" action="/Supplier/SaveNew">
                            <div class="mb-3">
                                <label class="form-label text-light">Name</label>
                                <input type="text" name="Name" id="Name" value="@Model?.Name"
                                       class="form-control text-light border-secondary"
                                       style="background-color: #374151;" />
                            </div>

                            <div class="mb-4">
                                <label class="form-label text-light">Address</label>
                                <input type="text" name="Adress" id="Adress" value="@Model?.Adress"
                                       class="form-control text-light border-secondary"
                                       style="background-color: #374151;" />
                            </div>

                            <div class="d-flex gap-3">
                                <input type="submit" value="Add Supplier" class="btn btn-primary flex-fill"
                                       style="background-color: #3b82f6; border-color: #3b82f6;" />
                                <a class="btn btn-outline-light flex-fill text-center"
                                   href="/Supplier/Index"
                                   style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                                    Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>