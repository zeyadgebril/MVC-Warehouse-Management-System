@{
    ViewData["Title"] = "Edit";
}

<body style="background-color: #1f2937; min-height: 100vh;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 shadow" style="background-color: #4b5563;">
                    <div class="card-body p-4">
                        <h1 class="text-center text-light mb-4">Edit Supplier</h1>

                        <form method="post" action="/Supplier/Update">
                            <!-- Hidden field for SupplierID - CRITICAL for updates -->
                            <input type="hidden" name="SupplierID" value="@Model?.SupplierID" />

                            <div class="form-group mb-3">
                                <label for="Name" class="form-label text-light">Name</label>
                                <input type="text" name="Name" id="Name" value="@Model?.Name"
                                       class="form-control text-light border-secondary"
                                       style="background-color: #374151;" />
                            </div>

                            <div class="form-group mb-4">
                                <label for="Address" class="form-label text-light">Address</label>
                                <input type="text" name="Address" id="Address" value="@Model?.Address"
                                       class="form-control text-light border-secondary"
                                       style="background-color: #374151;" />
                            </div>

                            <div class="d-flex gap-3">
                                <input type="submit" value="Update" class="btn btn-success flex-fill"
                                       style="background-color: #10b981; border-color: #10b981;" />
                                <a href="/Supplier/Index" class="btn btn-outline-light flex-fill text-center"
                                   style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                                    Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>