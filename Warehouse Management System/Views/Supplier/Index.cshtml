@model List<Supplier>
@{
    ViewData["Title"] = "Index";
    Layout = "_DashboardLayout";

}

<style>
    body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
        min-height: 100vh;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .modern-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        color: #f8fafc;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .modern-btn {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        border: none;
        border-radius: 12px;
        color: white;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 16px rgba(59, 130, 246, 0.4);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .modern-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.5);
            color: white;
            text-decoration: none;
        }

        .modern-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .modern-btn:hover::before {
            left: 100%;
        }

    .modern-card {
        background: rgba(30, 41, 59, 0.9);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(59, 130, 246, 0.1);
        overflow: hidden;
    }

    .modern-table {
        width: 100%;
        margin: 0;
        background: transparent;
        border-collapse: collapse;
    }

    .table-header {
        background: linear-gradient(135deg, #1e40af, #2563eb);
        position: relative;
    }

        .table-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6, #3b82f6);
        }

        .table-header th {
            color: #f8fafc;
            padding: 1.5rem 1rem;
            font-size: 1.1rem;
            font-weight: 600;
            text-align: left;
            border: none;
            position: relative;
        }

            .table-header th::after {
                content: '';
                position: absolute;
                right: 0;
                top: 25%;
                height: 50%;
                width: 1px;
                background: rgba(255, 255, 255, 0.1);
            }

            .table-header th:last-child::after {
                display: none;
            }

    .table-row {
        background: rgba(59, 130, 246, 0.05);
        transition: all 0.3s ease;
        position: relative;
    }

        .table-row:hover {
            background: rgba(59, 130, 246, 0.15);
            transform: translateY(-1px);
        }

        .table-row::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 1rem;
            right: 1rem;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.3), transparent);
        }

        .table-row:last-child::after {
            display: none;
        }

    .table-cell {
        color: #f8fafc;
        padding: 1.5rem 1rem;
        font-weight: 500;
        border: none;
        position: relative;
    }

    .details-btn {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        border: none;
        border-radius: 8px;
        color: white;
        padding: 8px 16px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .details-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(59, 130, 246, 0.4);
            color: white;
            text-decoration: none;
        }

        .details-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .details-btn:hover::before {
            left: 100%;
        }

    /* Floating particles background effect */
    .floating-particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
    }

    .particle {
        position: absolute;
        width: 2px;
        height: 2px;
        background: rgba(59, 130, 246, 0.6);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px) rotate(0deg);
        opacity: 0;
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
        opacity: 1;
    }

    }

    .particle:nth-child(1) {
        left: 10%;
        animation-delay: 0s;
    }

    .particle:nth-child(2) {
        left: 20%;
        animation-delay: 1s;
    }

    .particle:nth-child(3) {
        left: 30%;
        animation-delay: 2s;
    }

    .particle:nth-child(4) {
        left: 40%;
        animation-delay: 3s;
    }

    .particle:nth-child(5) {
        left: 50%;
        animation-delay: 4s;
    }

    .particle:nth-child(6) {
        left: 60%;
        animation-delay: 5s;
    }

    .particle:nth-child(7) {
        left: 70%;
        animation-delay: 0.5s;
    }

    .particle:nth-child(8) {
        left: 80%;
        animation-delay: 1.5s;
    }

    .particle:nth-child(9) {
        left: 90%;
        animation-delay: 2.5s;
    }

    .particle:nth-child(10) {
        left: 15%;
        animation-delay: 3.5s;
    }
</style>

<body>
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <div class="modern-container">
        <div class="header-section">
            <h1 class="page-title">Suppliers</h1>
            <a asp-action="New" asp-controller="Supplier" class="modern-btn">Add New</a>
        </div>

        <div class="modern-card">
            <table class="modern-table">
                <thead class="table-header">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Company</th>
                        <th>Address</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td class="table-cell">@item.SupplierID</td>
                            <td class="table-cell">@item.Name</td>
                            <td class="table-cell">@item.Company</td>
                            <td class="table-cell">@item.Address</td>
                            <td class="table-cell">
                                <a href="/Supplier/Details/@item.SupplierID" class="details-btn">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>