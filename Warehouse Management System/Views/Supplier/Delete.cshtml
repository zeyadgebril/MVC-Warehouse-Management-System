@model Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<style type="text/css">
    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        /* Animated background particles */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
            background-image: radial-gradient(2px 2px at 20% 30%, rgba(220, 38, 38, 0.3), transparent), radial-gradient(2px 2px at 40% 70%, rgba(220, 38, 38, 0.4), transparent), radial-gradient(1px 1px at 90% 40%, rgba(220, 38, 38, 0.3), transparent), radial-gradient(1px 1px at 50% 50%, rgba(220, 38, 38, 0.2), transparent), radial-gradient(2px 2px at 80% 10%, rgba(220, 38, 38, 0.4), transparent);
            background-size: 200% 100%;
            animation: twinkle 8s ease-in-out infinite alternate;
        }

    @@keyframes twinkle {
        0% {
            opacity: 0.3;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }

        100% {
            opacity: 0.3;
            transform: scale(1);
        }
    }

    .container {
        position: relative;
        z-index: 10;
        padding: 3rem 1rem;
    }

    .card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(220, 38, 38, 0.3);
        border-radius: 1rem;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        animation: slideInUp 0.8s ease-out;
        position: relative;
        overflow: hidden;
    }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(220, 38, 38, 0.1), transparent);
            animation: shimmer 3s infinite;
        }

    @@keyframes shimmer {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-body {
        padding: 2.5rem;
        position: relative;
        z-index: 2;
    }

    h1 {
        color: #e2e8f0;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        animation: fadeInDown 0.8s ease-out;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert {
        background: rgba(220, 38, 38, 0.1);
        border: 1px solid rgba(220, 38, 38, 0.3);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        backdrop-filter: blur(5px);
        animation: pulseWarning 2s ease-in-out infinite;
        position: relative;
        overflow: hidden;
    }

        .alert::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, transparent, rgba(220, 38, 38, 0.1), transparent);
            animation: alertShimmer 3s infinite;
        }

    @@keyframes alertShimmer {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    @@keyframes pulseWarning {
        0%, 100% {
            box-shadow: 0 0 0 0 rgba(220, 38, 38, 0.4);
        }

        50% {
            box-shadow: 0 0 0 10px rgba(220, 38, 38, 0.1);
        }
    }

    .alert h4 {
        color: #fca5a5;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        animation: fadeInLeft 0.8s ease-out;
        animation-delay: 0.2s;
        animation-fill-mode: both;
        position: relative;
        z-index: 2;
    }

    .alert p {
        color: #fecaca;
        margin-bottom: 0.5rem;
        font-size: 1rem;
        animation: fadeInLeft 0.8s ease-out;
        animation-fill-mode: both;
        position: relative;
        z-index: 2;
    }

        .alert p:nth-child(2) {
            animation-delay: 0.3s;
        }

        .alert p:nth-child(3) {
            animation-delay: 0.4s;
        }

        .alert p:nth-child(4) {
            animation-delay: 0.5s;
        }

        .alert p:last-child {
            color: #fbbf24;
            font-weight: 600;
            font-size: 1.1rem;
            margin-top: 1rem;
            animation: blink 1.5s infinite;
        }

    @@keyframes blink {
        0%, 50% {
            opacity: 1;
        }

        51%, 100% {
            opacity: 0.7;
        }
    }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .alert strong {
        color: #f87171;
        font-weight: 700;
    }

    .alert span {
        color: #fef2f2;
        font-weight: 500;
    }

    .d-flex {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        animation: fadeInUp 0.8s ease-out;
        animation-delay: 0.6s;
        animation-fill-mode: both;
        justify-content: center;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        font-size: 1rem;
        position: relative;
        overflow: hidden;
        min-width: 120px;
    }

    .btn-danger {
        background: linear-gradient(45deg, #dc2626, #b91c1c);
        color: white;
        box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
        animation: dangerPulse 3s ease-in-out infinite;
    }

    @@keyframes dangerPulse {
        0%, 100% {
            transform: scale(1);
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
        }

        50% {
            transform: scale(1.02);
            box-shadow: 0 6px 20px rgba(220, 38, 38, 0.6);
        }
    }

    .btn-danger:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 8px 25px rgba(220, 38, 38, 0.6);
        background: linear-gradient(45deg, #b91c1c, #991b1b);
        animation: none;
    }

    .btn-outline-light {
        background: transparent;
        color: #e2e8f0;
        border: 2px solid rgba(226, 232, 240, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-outline-light:hover {
            background: rgba(226, 232, 240, 0.1);
            border-color: #e2e8f0;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(226, 232, 240, 0.2);
            color: #e2e8f0;
            text-decoration: none;
        }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
        transition: left 0.5s;
    }

    .btn:hover::before {
        left: 100%;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .container {
            padding: 2rem 1rem;
        }

        .card-body {
            padding: 2rem;
        }

        h1 {
            font-size: 1.75rem;
        }

        .d-flex {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 200px;
        }

        .alert {
            padding: 1rem;
        }

            .alert h4 {
                font-size: 1.1rem;
            }

            .alert p {
                font-size: 0.9rem;
            }
    }
</style>

<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow">
                    <div class="card-body p-4">
                        <h1 class="text-center text-light mb-4">Delete Supplier</h1>
                        <div class="alert border-0 mb-4">
                            <h4 class="text-white">Are you sure you want to delete this supplier?</h4>
                            <p class="mb-2"><strong class="text-white">Name:</strong> <span class="text-white">@Model.Name</span></p>
                            <p class="mb-2"><strong class="text-white">Address:</strong> <span class="text-white">@Model.Address</span></p>
                            <p class="mb-0"><strong>This action cannot be undone!</strong></p>
                        </div>
                        <form method="post" action="/Supplier/SoftDelete">
                            <input type="hidden" name="id" value="@Model.SupplierID" />
                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-danger px-4">
                                    Yes, Delete
                                </button>
                                <a href="/Supplier/Details/@Model.SupplierID" class="btn btn-outline-light px-4">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>