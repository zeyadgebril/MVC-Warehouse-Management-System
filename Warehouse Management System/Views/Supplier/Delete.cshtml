@model Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<body style="background-color: #1f2937; min-height: 100vh;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow" style="background-color: #4b5563;">
                    <div class="card-body p-4">
                        <h1 class="text-center text-light mb-4">Delete Supplier</h1>

                        <div class="alert border-0 mb-4" style="background-color: #dc2626; color: #fef2f2;">
                            <h4 class="text-white">Are you sure you want to delete this supplier?</h4>
                            <p class="mb-2"><strong class="text-white">Name:</strong> <span class="text-white">@Model.Name</span></p>
                            <p class="mb-2"><strong class="text-white">Address:</strong> <span class="text-white">@Model.Address</span></p>
                            <p class="mb-0" style="color: #fecaca;"><strong>This action cannot be undone!</strong></p>
                        </div>

                        <form method="post" action="/Supplier/SoftDelete">
                            <input type="hidden" name="id" value="@Model.SupplierID" />
                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-danger px-4"
                                        style="background-color: #dc2626; border-color: #dc2626;">
                                    Yes, Delete
                                </button>
                                <a href="/Supplier/Details/@Model.SupplierID" class="btn btn-outline-light px-4"
                                   style="text-decoration: none; display: flex; align-items: center; justify-content: center;">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>