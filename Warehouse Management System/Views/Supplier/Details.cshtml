@{
    ViewData["Title"] = "Details";
}

<body style="background-color: #1f2937; min-height: 100vh;">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow" style="background-color: #4b5563;">
                    <div class="card-body p-4">
                        <h1 class="text-center text-light mb-4">Supplier Details</h1>

                        <table class="table table-dark table-hover mb-4" style="background-color: #4b5563; color: #f9fafb;">
                            <tbody style="background-color: #4b5563;">
                                <tr style="background-color: #4b5563;">
                                    <th class="text-light py-3 px-4" style="border-color: #6b7280; background-color: #374151; width: 30%;">Id</th>
                                    <td class="text-light py-3 px-4" style="border-color: #6b7280; background-color: #4b5563;">@Model.SupplierID</td>
                                </tr>
                                <tr style="background-color: #4b5563;">
                                    <th class="text-light py-3 px-4" style="border-color: #6b7280; background-color: #374151; width: 30%;">Name</th>
                                    <td class="text-light py-3 px-4" style="border-color: #6b7280; background-color: #4b5563;">@Model.Name</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="d-flex gap-3 justify-content-center flex-wrap">
                            <a class="btn btn-primary" href="/Supplier/Index"
                               style="background-color: #3b82f6; border-color: #3b82f6; text-decoration: none;">
                                Back to List
                            </a>
                            <a href="/Supplier/Edit/@Model.SupplierID" class="btn btn-warning"
                               style="background-color: #f59e0b; border-color: #f59e0b; color: white; text-decoration: none;">
                                Edit
                            </a>
                            <a href="/Supplier/Delete/@Model.SupplierID" class="btn btn-danger"
                               style="background-color: #dc2626; border-color: #dc2626; text-decoration: none;">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>