<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<style>
    .nav-link:hover {
        background-color: #3a3a3a;
    }
</style>
<body class="bg-dark text-white">
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="p-3" style="width: 220px; min-height: 100vh; background-color:#1a1a1a">
            <h5 class="text-light mb-4">User Name</h5>
            <ul class="nav flex-column gap-2">
                <li class="nav-item">
                    <a class="nav-link text-light border-top border-bottom p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "bg-primary" : "")"
                       asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light border-bottom p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Warehouse" ? "bg-primary" : "")"
                       asp-controller="Warehouse" asp-action="Index">
                        <i class="bi bi-box-seam me-2"></i> Warehouse
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light border-bottom p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "bg-primary" : "")"
                       asp-controller="Category" asp-action="Index">
                        <i class="bi bi-tags-fill me-2"></i> Categories
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light border-bottom p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Supplier" ? "bg-primary" : "")"
                       asp-controller="Supplier" asp-action="Index">
                        <i class="bi bi-truck me-2"></i> Suppliers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light border-bottom p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "bg-primary" : "")"
                       asp-controller="Product" asp-action="Index">
                        <i class="bi bi-box-seam me-2"></i> Products
                    </a>
                </li>
            </ul>
        </nav>


        <!-- Main Content -->
        <div class="flex-grow-1 bg-black">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h5">Dashboard</span>
                    <span class="text-light">Welcome, @User?.Identity?.Name</span>
                </div>
            </nav>

            <!-- Body Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
