<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]x</title>
    <link rel="icon" href="/icon.ico" />
    <link rel="stylesheet" href="~/css/LandingPage.css" asp-append-version="true" />
	<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />

</head>
<body>
    <div class="animated-bg"></div>

    <div class="particles" id="particles"></div>

    <nav id="navbar">
        <div class="container">
            <div class="nav-content">
                <div class="logo">Crocodrax</div>
                <ul class="nav-links">
                    <li><a href="#home">Home</a></li>
                    <li><a href="#stats">Performance</a></li>
                    <li><a href="#features">Features</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
                <div class="auth-section">
                    @if(User.Identity.IsAuthenticated)
                    {
                        <a asp-action="SuspendedAndAdminApproval" asp-controller="Home" class="animated-btn" id="authButton">
                            <span class="auth-text" style="font-size:medium">Dashboard</span>
                        </a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account" class="animated-btn" id="authButton">
                            <span class="auth-text" style="font-size:medium">Login / Sign Up</span>
                            <span class="auth-icon">→</span>
                        </a>
                    }
                    
                </div>
            </div>
        </div>
    </nav>

    <section class="hero" id="home">
        <div class="floating-particles"></div>
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1>Revolutionary Warehouse Intelligence</h1>
                    <p class="subtitle">
                        Transform your inventory operations with
                        <span class="highlight">AI-powered analytics</span>, real-time
                        tracking, and intelligent automation that scales with your
                        business.
                    </p>
                    <div class="cta-buttons">
                        <a class="cta-primary" asp-action="Register" asp-controller="Account">Start Free Trial</a>
                        <a class="cta-secondary">Watch Demo</a>
                    </div>
                </div>
                <div class="hero-visual">
                    <div class="warehouse-container">
                        <svg class="warehouse-svg"
                             viewBox="0 0 600 480"
                             xmlns="http://www.w3.org/2000/svg">
                            <!-- Enhanced Warehouse Building -->
                            <defs>
                                <linearGradient id="buildingGrad"
                                                x1="0%"
                                                y1="0%"
                                                x2="100%"
                                                y2="100%">
                                    <stop offset="0%"
                                          style="stop-color: #2d3748; stop-opacity: 1" />
                                    <stop offset="100%"
                                          style="stop-color: #1a202c; stop-opacity: 1" />
                                </linearGradient>
                                <linearGradient id="roofGrad"
                                                x1="0%"
                                                y1="0%"
                                                x2="100%"
                                                y2="100%">
                                    <stop offset="0%"
                                          style="stop-color: #4a5568; stop-opacity: 1" />
                                    <stop offset="100%"
                                          style="stop-color: #2d3748; stop-opacity: 1" />
                                </linearGradient>
                                <filter id="glow">
                                    <feGaussianBlur stdDeviation="3" result="coloredBlur" />
                                    <feMerge>
                                        <feMergeNode in="coloredBlur" />
                                        <feMergeNode in="SourceGraphic" />
                                    </feMerge>
                                </filter>
                            </defs>

                            <g class="warehouse-building">
                                <!-- Main Building -->
                                <rect x="80"
                                      y="180"
                                      width="340"
                                      height="140"
                                      fill="url(#buildingGrad)"
                                      stroke="#3B82F6"
                                      stroke-width="2"
                                      rx="5" />

                                <!-- Roof -->
                                <polygon points="80,180 250,120 420,180"
                                         fill="url(#roofGrad)"
                                         stroke="#3B82F6"
                                         stroke-width="2" />

                                <!-- Windows with animated lights -->
                                <rect x="100"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#1E40AF"
                                      opacity="0.8">
                                    <animate attributeName="opacity"
                                             values="0.4;1;0.4"
                                             dur="3s"
                                             repeatCount="indefinite" />
                                </rect>
                                <rect x="150"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#2563EB"
                                      opacity="0.6">
                                    <animate attributeName="opacity"
                                             values="0.3;0.9;0.3"
                                             dur="2.5s"
                                             begin="0.5s"
                                             repeatCount="indefinite" />
                                </rect>
                                <rect x="200"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#3B82F6"
                                      opacity="0.9">
                                    <animate attributeName="opacity"
                                             values="0.5;1;0.5"
                                             dur="2s"
                                             begin="1s"
                                             repeatCount="indefinite" />
                                </rect>
                                <rect x="250"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#1E40AF"
                                      opacity="0.7">
                                    <animate attributeName="opacity"
                                             values="0.4;0.8;0.4"
                                             dur="3.5s"
                                             begin="0.8s"
                                             repeatCount="indefinite" />
                                </rect>
                                <rect x="300"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#2563EB"
                                      opacity="0.8">
                                    <animate attributeName="opacity"
                                             values="0.6;1;0.6"
                                             dur="2.8s"
                                             begin="1.2s"
                                             repeatCount="indefinite" />
                                </rect>
                                <rect x="350"
                                      y="200"
                                      width="35"
                                      height="50"
                                      fill="#3B82F6"
                                      opacity="0.5">
                                    <animate attributeName="opacity"
                                             values="0.3;0.7;0.3"
                                             dur="2.2s"
                                             begin="0.3s"
                                             repeatCount="indefinite" />
                                </rect>

                                <!-- Loading Dock -->
                                <rect x="380"
                                      y="260"
                                      width="30"
                                      height="60"
                                      fill="#2563EB"
                                      stroke="#3B82F6"
                                      stroke-width="1" />
                            </g>

                            <!-- Enhanced Conveyor Belt System -->
                            <g class="conveyor-system">
                                <line x1="50"
                                      y1="340"
                                      x2="450"
                                      y2="340"
                                      stroke="#3B82F6"
                                      stroke-width="12"
                                      stroke-dasharray="15,10"
                                      opacity="0.8">
                                    <animate attributeName="stroke-dashoffset"
                                             values="0;25"
                                             dur="2s"
                                             repeatCount="indefinite" />
                                </line>
                                <circle cx="60"
                                        cy="340"
                                        r="12"
                                        fill="#2563EB"
                                        filter="url(#glow)" />
                                <circle cx="440"
                                        cy="340"
                                        r="12"
                                        fill="#2563EB"
                                        filter="url(#glow)" />

                                <!-- Moving packages -->
                                <g class="moving-packages">
                                    <rect x="120"
                                          y="325"
                                          width="20"
                                          height="20"
                                          fill="#3B82F6"
                                          rx="2"
                                          opacity="0.9">
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; 320,0; 320,0; 0,0"
                                                          dur="4s"
                                                          repeatCount="indefinite" />
                                        <animate attributeName="opacity"
                                                 values="0.9;0.9;0;0"
                                                 dur="4s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                    <rect x="80"
                                          y="330"
                                          width="15"
                                          height="15"
                                          fill="#60A5FA"
                                          rx="2"
                                          opacity="0.8">
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; 360,0; 360,0; 0,0"
                                                          dur="3.5s"
                                                          begin="0.5s"
                                                          repeatCount="indefinite" />
                                        <animate attributeName="opacity"
                                                 values="0.8;0.8;0;0"
                                                 dur="3.5s"
                                                 begin="0.5s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                    <rect x="160"
                                          y="328"
                                          width="18"
                                          height="18"
                                          fill="#2563EB"
                                          rx="2"
                                          opacity="0.7">
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; 280,0; 280,0; 0,0"
                                                          dur="4.5s"
                                                          begin="1s"
                                                          repeatCount="indefinite" />
                                        <animate attributeName="opacity"
                                                 values="0.7;0.7;0;0"
                                                 dur="4.5s"
                                                 begin="1s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                </g>
                            </g>

                            <!-- Advanced Crane System -->
                            <g class="crane-system">
                                <line x1="350"
                                      y1="100"
                                      x2="350"
                                      y2="200"
                                      stroke="#3B82F6"
                                      stroke-width="6"
                                      filter="url(#glow)" />
                                <line x1="320"
                                      y1="100"
                                      x2="400"
                                      y2="100"
                                      stroke="#3B82F6"
                                      stroke-width="4"
                                      filter="url(#glow)" />
                                <circle cx="375"
                                        cy="100"
                                        r="5"
                                        fill="#60A5FA"
                                        filter="url(#glow)" />

                                <!-- Animated crane hook -->
                                <g class="crane-hook">
                                    <line x1="375"
                                          y1="100"
                                          x2="375"
                                          y2="160"
                                          stroke="#3B82F6"
                                          stroke-width="2">
                                        <animate attributeName="y2"
                                                 values="160;180;160"
                                                 dur="3s"
                                                 repeatCount="indefinite" />
                                    </line>
                                    <rect x="370"
                                          y="155"
                                          width="10"
                                          height="8"
                                          fill="#2563EB"
                                          rx="1">
                                        <animate attributeName="y"
                                                 values="155;175;155"
                                                 dur="3s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                </g>
                            </g>

                            <!-- Data Visualization Elements -->
                            <g class="data-viz">
                                <!-- Floating data points -->
                                <g class="data-stream">
                                    <circle cx="150" cy="140" r="3" fill="#60A5FA" opacity="0">
                                        <animate attributeName="opacity"
                                                 values="0;1;0"
                                                 dur="2s"
                                                 repeatCount="indefinite" />
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; 20,-30; 40,-60"
                                                          dur="3s"
                                                          repeatCount="indefinite" />
                                    </circle>
                                    <circle cx="250" cy="130" r="2" fill="#3B82F6" opacity="0">
                                        <animate attributeName="opacity"
                                                 values="0;1;0"
                                                 dur="2.5s"
                                                 begin="0.5s"
                                                 repeatCount="indefinite" />
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; -15,-40; -30,-80"
                                                          dur="3.5s"
                                                          begin="0.5s"
                                                          repeatCount="indefinite" />
                                    </circle>
                                    <circle cx="320"
                                            cy="145"
                                            r="2.5"
                                            fill="#8B5CF6"
                                            opacity="0">
                                        <animate attributeName="opacity"
                                                 values="0;1;0"
                                                 dur="2.2s"
                                                 begin="1s"
                                                 repeatCount="indefinite" />
                                        <animateTransform attributeName="transform"
                                                          type="translate"
                                                          values="0,0; 10,-35; 20,-70"
                                                          dur="3.2s"
                                                          begin="1s"
                                                          repeatCount="indefinite" />
                                    </circle>
                                </g>

                                <!-- Holographic displays -->
                                <g class="holo-display" opacity="0.7">
                                    <rect x="30"
                                          y="80"
                                          width="80"
                                          height="50"
                                          fill="none"
                                          stroke="#06B6D4"
                                          stroke-width="1"
                                          rx="5">
                                        <animate attributeName="opacity"
                                                 values="0.3;0.8;0.3"
                                                 dur="4s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                    <text x="50"
                                          y="100"
                                          fill="#06B6D4"
                                          font-size="8"
                                          font-family="monospace">
                                        INVENTORY
                                    </text>
                                    <text x="50"
                                          y="115"
                                          fill="#06B6D4"
                                          font-size="6"
                                          font-family="monospace">
                                        98.2% OPTIMAL
                                    </text>
                                </g>

                                <g class="holo-display-2" opacity="0.6">
                                    <rect x="420"
                                          y="90"
                                          width="70"
                                          height="45"
                                          fill="none"
                                          stroke="#8B5CF6"
                                          stroke-width="1"
                                          rx="5">
                                        <animate attributeName="opacity"
                                                 values="0.4;0.9;0.4"
                                                 dur="3.5s"
                                                 begin="1s"
                                                 repeatCount="indefinite" />
                                    </rect>
                                    <text x="430"
                                          y="105"
                                          fill="#8B5CF6"
                                          font-size="7"
                                          font-family="monospace">
                                        EFFICIENCY
                                    </text>
                                    <text x="440"
                                          y="120"
                                          fill="#8B5CF6"
                                          font-size="6"
                                          font-family="monospace">
                                        +23.7%
                                    </text>
                                </g>
                            </g>

                            <!-- Ambient lighting effects -->
                            <g class="ambient-glow">
                                <circle cx="250"
                                        cy="300"
                                        r="100"
                                        fill="url(#ambientGlow)"
                                        opacity="0.1">
                                    <animate attributeName="opacity"
                                             values="0.05;0.2;0.05"
                                             dur="6s"
                                             repeatCount="indefinite" />
                                </circle>
                            </g>

                            <defs>
                                <radialGradient id="ambientGlow">
                                    <stop offset="0%"
                                          style="stop-color: #3b82f6; stop-opacity: 1" />
                                    <stop offset="100%"
                                          style="stop-color: #3b82f6; stop-opacity: 0" />
                                </radialGradient>
                            </defs>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats" id="stats">
        <div class="container">
            <div class="stats-grid fade-in">
                <div class="stat-item">
                    <div class="stat-number" data-target="99.8">0</div>
                    <div class="stat-label">Uptime Guarantee</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" data-target="47">0</div>
                    <div class="stat-label">Efficiency Boost</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" data-target="100">0</div>
                    <div class="stat-label">Companies Trust Us</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number" data-target="24">0</div>
                    <div class="stat-label">Support Available</div>
                </div>
            </div>
        </div>
    </section>

    <section class="features" id="features">
        <div class="container">
            <div class="section-header fade-in">
                <h2>Cutting-Edge Capabilities</h2>
                <p>
                    Harness the power of next-generation technology to revolutionize
                    your warehouse operations and stay ahead of the competition.
                </p>
            </div>
            <div class="features-grid">
                <div class="feature-card slide-in-left">
                    <div class="feature-icon">🤖</div>
                    <h3>AI-Powered Predictions</h3>
                    <p>
                        Advanced machine learning algorithms analyze patterns and predict
                        inventory needs, preventing stockouts and reducing waste with 97%
                        accuracy.
                    </p>
                </div>
                <div class="feature-card slide-in-right">
                    <div class="feature-icon">⚡</div>
                    <h3>Real-Time Processing</h3>
                    <p>
                        Lightning-fast data processing with microsecond response times.
                        Track every movement, transaction, and change as it happens across
                        your entire operation.
                    </p>
                </div>
                <div class="feature-card slide-in-left">
                    <div class="feature-icon">🛡️</div>
                    <h3>Enterprise Security</h3>
                    <p>
                        Military-grade encryption, zero-trust architecture, and compliance
                        with SOC 2, GDPR, and industry standards. Your data is
                        fortress-protected.
                    </p>
                </div>
                <div class="feature-card slide-in-right">
                    <div class="feature-icon">📊</div>
                    <h3>Advanced Analytics</h3>
                    <p>
                        Interactive dashboards with 40+ KPIs, custom reports, and
                        predictive insights. Transform raw data into actionable business
                        intelligence.
                    </p>
                </div>
                <div class="feature-card slide-in-left">
                    <div class="feature-icon">🔄</div>
                    <h3>Smart Automation</h3>
                    <p>
                        Intelligent workflows that adapt to your business rules. Automate
                        reordering, routing, and task assignment with 99.9% accuracy.
                    </p>
                </div>
                <div class="feature-card slide-in-right">
                    <div class="feature-icon">🌐</div>
                    <h3>Global Scalability</h3>
                    <p>
                        Multi-location support with unified operations. Scale from single
                        warehouse to global enterprise with seamless integration
                        capabilities.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="contact" id="contact">
        <div class="container">
            <div class="section-header fade-in">
                <h2>Transform Your Warehouse Today</h2>
                <p>
                    Join thousands of companies already using Crocodrax to revolutionize
                    their operations.
                </p>
            </div>
            <div class="form-container fade-in">
                <form id="contactForm">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="firstName">First Name</label>
                            <input type="text" id="firstName" name="firstName" required />
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name</label>
                            <input type="text" id="lastName" name="lastName" required />
                        </div>
                        <div class="form-group">
                            <label for="email">Business Email</label>
                            <input type="email" id="email" name="email" required />
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" required />
                        </div>
                        <div class="form-group">
                            <label for="company">Company Name</label>
                            <input type="text" id="company" name="company" required />
                        </div>
                        <div class="form-group">
                            <label for="warehouses">Number of Warehouses</label>
                            <input type="number"
                                   id="warehouses"
                                   name="warehouses"
                                   min="1"
                                   required />
                        </div>
                    </div>
                    <div class="form-group full-width">
                        <label for="message">Tell us about your warehouse challenges</label>
                        <textarea id="message"
                                  name="message"
                                  rows="4"
                                  placeholder="Describe your current pain points, goals, and what you'd like to achieve with Crocodrax..."
                                  required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">
                        Get Your Custom Demo
                    </button>
                </form>
            </div>
        </div>
    </section>

    <div class="system-info">
        <div>Warehouse Management System</div>
        <div class="version">Version 1.0.4 | Secure Connection</div>
        <div class="version">
            © 2025 Crocodrax. All rights reserved. Built with ❤️ for our users.
        </div>
    </div>
    @RenderBody()

    <script src="~/js/LandingPage.js"></script>
</body>
</html>
