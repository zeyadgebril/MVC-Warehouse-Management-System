@model IEnumerable<Warehouse_Management_System.ViewModels.ProductViewModel>

@{
	ViewData["Title"] = "Products";
}

<style>

	body {
		background-color: #1a1a1a;
		color: #ffffff;
	}

	.bg-dark-custom {
		background-color: #2d2d2d !important;
	}

	.card-dark {
		background-color: #2d2d2d;
		border: 1px solid #404040;
	}

	.table-dark-custom {
		background-color: #000000;
		color: #B1DDF1;
	}

		.table-dark-custom th {
			background-color: #000000;
			border-color: #B1DDF1;
			color: #B1DDF1;
		}

		.table-dark-custom td {
			border-color: #B1DDF1;
			background-color: #000000;
			color: #B1DDF1;
		}

	.text-light-muted {
		color: #B1DDF1 !important;
	}

	.alert-success-dark {
		background-color: #1e4d3e;
		border-color: #2d7a5f;
		color: #a3d9c4;
	}

</style>

<div class="container mt-4">
	<div class="row">
		<div class="col-md-12">
			<div class="d-flex justify-content-between align-items-center mb-4">
				<h2 class="text-white">Products</h2>
				<a asp-action="Create" class="btn btn-primary rounded-pill px-4">
					<i class="fas fa-plus"></i> Add New Product
				</a>
			</div>

			@if (TempData["Success"] != null)
			{
				<div class="alert alert-success-dark alert-dismissible fade show rounded-3" role="alert">
					@TempData["Success"]
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
				</div>
			}

			<div class="card card-dark rounded-4 shadow-lg">
				<div class="card-body p-4">
					<div class="table-responsive">
						<table class="table table-dark-custom table-hover">
							<thead>
								<tr>
									<th class="rounded-start"><label asp-for="@Model.First().Name"></label></th>
									<th><label asp-for="@Model.First().AvailableStock"></label></th>
									<th><label asp-for="@Model.First().CurrentQuantity"></label></th>
									<th><label asp-for="@Model.First().UnitPrice"></label></th>
									<th><label asp-for="@Model.First().IsActive"></label></th>
									<th><label asp-for="@Model.First().LastUpdated"></label></th>
									<th class="rounded-end">Actions</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									@foreach (var item in Model)
									{
										<tr>
											<td>
												<strong class="text-white"><span asp-for="@item.Name">@item.Name</span></strong>
												@if (!string.IsNullOrEmpty(item.Description))
												{
													<br>
													<small class="text-light-muted">@item.Description.Substring(0, Math.Min(50, item.Description.Length))@(item.Description.Length > 50 ? "..." : "")</small>
												}
											</td>
											<td>
												<span class="badge rounded-pill @(item.AvailableStock <= item.MinAvailableStock ? "bg-danger" : "bg-success")">
													<span asp-for="@item.AvailableStock">@item.AvailableStock</span>
												</span>
											</td>
											<td class="text-white"><span asp-for="@item.CurrentQuantity">@item.CurrentQuantity</span></td>
											<td class="text-white"><span asp-for="@item.UnitPrice">@item.UnitPrice?.ToString("C")</span></td>
											<td>
												@if (item.IsActive == true)
												{
													<span class="badge bg-success rounded-pill">Active</span>
												}
												else
												{
													<span class="badge bg-secondary rounded-pill">Inactive</span>
												}
											</td>
											<td class="text-white"><span asp-for="@item.LastUpdated">@item.LastUpdated?.ToString("g")</span></td>
											<td>
												<div class="btn-group rounded-3" role="group">
													<a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-info btn-sm" title="View Details">
														<i class="fas fa-eye"></i>
													</a>
													<a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-outline-warning btn-sm" title="Edit">
														<i class="fas fa-edit"></i>
													</a>
													<a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-outline-danger btn-sm" title="Delete">
														<i class="fas fa-trash"></i>
													</a>
												</div>
											</td>
										</tr>
									}
								}
								else
								{
									<tr>
										<td colspan="7" class="text-center">
											<div class="py-5">
												<i class="fas fa-box-open fa-4x text-light-muted mb-4"></i>
												<h5 class="text-white">No products found</h5>
												<p class="text-light-muted">Start by adding your first product.</p>
												<a asp-action="Create" class="btn btn-primary rounded-pill px-4">Add Product</a>
											</div>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}