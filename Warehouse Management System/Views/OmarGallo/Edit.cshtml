@model Warehouse_Management_System.ViewModels.ProductViewModel

@{
	ViewData["Title"] = "Edit Product";
}

<style>
	body {
		background-color: #1a1a1a;
		color: #ffffff;
	}

	.bg-dark-custom {
		background-color: #2d2d2d !important;
	}

	.card-dark {
		background-color: #2d2d2d;
		border: 1px solid #404040;
	}

	.table-dark-custom {
		background-color: #000000;
		color: #B1DDF1;
	}

		.table-dark-custom th {
			background-color: #000000;
			border-color: #B1DDF1;
			color: #B1DDF1;
		}

		.table-dark-custom td {
			border-color: #B1DDF1;
			background-color: #000000;
			color: #B1DDF1;
		}

	.text-light-muted {
		color: #B1DDF1 !important;
	}

	.alert-success-dark {
		background-color: #1e4d3e;
		border-color: #2d7a5f;
		color: #a3d9c4;
	}

	.form-control {
		background-color: #404040;
		border: 1px solid #6c757d;
		color: #fff;
	}

		.form-control:focus {
			background-color: #404040;
			border-color: #0d6efd;
			box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
			color: #fff;
		}

	.input-group-text {
		background-color: #6c757d;
		border-color: #6c757d;
		color: #fff;
	}

	.card-header {
		border-bottom: 1px solid #404040;
	}

	.form-check-input:checked {
		background-color: #0d6efd;
		border-color: #0d6efd;
	}
</style>

<div class="container mt-4">
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="card card-dark">
				<div class="card-header bg-dark-custom">
					<h4 class="mb-0 text-light">
						<i class="fas fa-edit"></i> Edit Product: @Model.Name
					</h4>
				</div>
				<div class="card-body">
					<form asp-action="Edit" method="post">
						<input asp-for="ProductId" type="hidden" />
						<input asp-for="CreatedDate" type="hidden" />

						<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group mb-3">
									<label asp-for="Name" class="form-label text-light"></label>
									<input asp-for="Name" class="form-control" placeholder="Enter product name" />
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group mb-3">
									<label asp-for="CategoryId" class="form-label text-light"></label>
									<input asp-for="CategoryId" class="form-control" type="number" placeholder="Category ID" />
									<span asp-validation-for="CategoryId" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Description" class="form-label text-light"></label>
							<textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>

						<div class="row">
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="AvailableStock" class="form-label text-light"></label>
									<input asp-for="AvailableStock" class="form-control" type="number" min="0" />
									<span asp-validation-for="AvailableStock" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="CurrentQuantity" class="form-label text-light"></label>
									<input asp-for="CurrentQuantity" class="form-control" type="number" min="0" />
									<span asp-validation-for="CurrentQuantity" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="MinAvailableStock" class="form-label text-light"></label>
									<input asp-for="MinAvailableStock" class="form-control" type="number" min="0" />
									<span asp-validation-for="MinAvailableStock" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="UnitPrice" class="form-label text-light"></label>
									<div class="input-group">
										<span class="input-group-text">$</span>
										<input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
									</div>
									<span asp-validation-for="UnitPrice" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="CostPrice" class="form-label text-light"></label>
									<div class="input-group">
										<span class="input-group-text">$</span>
										<input asp-for="CostPrice" class="form-control" type="number" step="0.01" min="0" />
									</div>
									<span asp-validation-for="CostPrice" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label asp-for="Weight" class="form-label text-light"></label>
									<div class="input-group">
										<input asp-for="Weight" class="form-control" type="number" step="0.01" min="0" />
										<span class="input-group-text">kg</span>
									</div>
									<span asp-validation-for="Weight" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-8">
								<div class="form-group mb-3">
									<label asp-for="ImageURL" class="form-label text-light"></label>
									<input asp-for="ImageURL" class="form-control" type="text" placeholder="https://example.com/image.jpg" />
									<span asp-validation-for="ImageURL" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group mb-3">
									<label class="form-label text-light">&nbsp;</label>
									<div class="form-check">
										<input type="checkbox" class="form-check-input"
											   name="IsActive" value="true"
										@(Model.IsActive == true ? "checked" : "") />
										<input type="hidden" name="IsActive" value="false" />
										<label class="form-check-label text-light-muted">
											<span asp-for="IsActive">Active</span>
										</label>
									</div>
								</div>
							</div>
						</div>

						@if (Model.CreatedDate.HasValue)
						{
								<div class="row">
									<div class="col-md-6">
										<div class="form-group mb-3">
											<label class="form-label text-light">Created Date</label>
											<input value="@Model.CreatedDate.Value.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly />
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group mb-3">
											<label class="form-label text-light">Last Updated</label>
											<input value="@(Model.LastUpdated?.ToString("yyyy-MM-dd HH:mm") ?? "Never")" class="form-control" readonly />
										</div>
									</div>
								</div>
						}

						<hr style="border-color: #404040;">

						<div class="d-flex justify-content-between">
							<a asp-action="Index" class="btn btn-secondary">
								<i class="fas fa-arrow-left"></i> Back to List
							</a>
							<div>
								<a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info me-2">
									<i class="fas fa-eye"></i> View Details
								</a>
								<button type="submit" class="btn btn-warning">
									<i class="fas fa-save"></i> Update Product
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
