                    /* Toast Container */
       .toast-container {
           position: fixed;
           top: 20px;
           right: 20px;
           z-index: 9999;
           pointer-events: none;
       }

       /* Toast Base Styles */
       .toast {
           background: linear-gradient(135deg, #2c3e50, #34495e);
           border: 1px solid #3498db;
           border-radius: 12px;
           padding: 16px 20px;
           margin-bottom: 8px;
           min-width: 300px;
           max-width: 400px;
           box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
           transform: translateX(450px);
           opacity: 0;
           transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
           pointer-events: auto;
           position: relative;
           overflow: hidden;
           color: white;
       }

       /* Show Animation */
       .toast.show {
           transform: translateX(0);
           opacity: 1;
       }

       /* Hide Animation */
       .toast.hide {
           transform: translateX(450px);
           opacity: 0;
       }

       /* Toast Types */
       .toast.success {
           border-left: 4px solid #27ae60;
           background: linear-gradient(135deg, #2c3e50, rgba(39, 174, 96, 0.2));
       }

       .toast.error {
           border-left: 4px solid #e74c3c;
           background: linear-gradient(135deg, #2c3e50, rgba(231, 76, 60, 0.2));
       }

       .toast.warning {
           border-left: 4px solid #f39c12;
           background: linear-gradient(135deg, #2c3e50, rgba(243, 156, 18, 0.2));
       }

       .toast.info {
           border-left: 4px solid #3498db;
           background: linear-gradient(135deg, #2c3e50, rgba(52, 152, 219, 0.2));
       }

       /* Toast Header */
       .toast-header {
           display: flex;
           align-items: center;
           justify-content: space-between;
           margin-bottom: 8px;
       }

       .toast-title {
           font-weight: bold;
           font-size: 16px;
           display: flex;
           align-items: center;
           gap: 8px;
       }

       .toast-icon {
           width: 20px;
           height: 20px;
           border-radius: 50%;
           display: flex;
           align-items: center;
           justify-content: center;
           font-size: 12px;
           font-weight: bold;
           color: white;
       }

       .toast.success .toast-icon {
           background-color: #27ae60;
       }

       .toast.error .toast-icon {
           background-color: #e74c3c;
       }

       .toast.warning .toast-icon {
           background-color: #f39c12;
       }

       .toast.info .toast-icon {
           background-color: #3498db;
       }

       /* Close Button */
       .toast-close {
           background: none;
           border: none;
           color: #bdc3c7;
           font-size: 20px;
           cursor: pointer;
           padding: 0;
           width: 24px;
           height: 24px;
           display: flex;
           align-items: center;
           justify-content: center;
           border-radius: 50%;
           transition: all 0.2s ease;
       }

       .toast-close:hover {
           background-color: rgba(255, 255, 255, 0.1);
           color: white;
       }

       /* Toast Body */
       .toast-body {
           color: #ecf0f1;
           font-size: 14px;
           line-height: 1.4;
       }

       /* Progress Bar */
       .toast-progress {
           position: absolute;
           bottom: 0;
           left: 0;
           height: 3px;
           background-color: #3498db;
           transition: width linear;
           border-radius: 0 0 12px 12px;
       }

       .toast.success .toast-progress {
           background-color: #27ae60;
       }

       .toast.error .toast-progress {
           background-color: #e74c3c;
       }

       .toast.warning .toast-progress {
           background-color: #f39c12;
       }

       .toast.info .toast-progress {
           background-color: #3498db;
       }

         
