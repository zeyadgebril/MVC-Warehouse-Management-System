<!-- Toast Container -->
<div class="toast-container" id="toastContainer"></div>
<!-- Main Content -->
<div class="container main-content">
    <h1 class="page-title">All Users Management</h1>

    <!-- Statistics -->
    <div class="stats-container">
        <div class="row">
            <div class="col-md-3 stat-item">
                <div class="stat-number">@Model.TotalUsers</div>
                <div class="stat-label">Total Users</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">@Model.ActiveUser</div>
                <div class="stat-label">Online Users</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">@Model.InactiveUser</div>
                <div class="stat-label">Offline Users</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">@Model.Suspended</div>
                <div class="stat-label">Suspended</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <div class="row justify-content-between">
            <div class="col-md-5">
                <label class="form-label" style="color:white">Search Users</label>
                <input type="text"
                       id="Search"
                       class="form-control filter-input"
                       oninput="getSearchResult()"
                       placeholder="Username or email..." />
            </div>
            <div class="col-md-3">
                <label class="form-label" style="color:white">Status</label>
                <select class="form-select filter-select" id="Selected" onchange="getSelectResult()">
                    <option value="all" selected>All</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="users-table">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Activity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @await Html.PartialAsync("_UserTableRows", Model.Users);
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center mt-5">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="userMangment" asp-controller="Admin" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="userMangment" asp-controller="Admin" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="userMangment" asp-controller="Admin" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script>
        let searchTimer;
        let selectTime;

        function getSearchResult() {
            clearTimeout(searchTimer);
            searchTimer = setTimeout(() => {
                let searchValue = $("#Search").val().trim();

                // Only search if 2+ characters or empty (to reset)
                if(searchValue.length >= 2 || searchValue.length === 0) {
                    showLoading();

                    $.ajax({
                        url: "@Url.Action("Search", "Admin")",
                        type: "GET",
                        data: { searchTerm: searchValue },
                        success: function(result) {
                            $("tbody").html(result);
                        },
                        error: function() {
                            showError()
                        }
                    });
                }
            }, 300);
        }
        function getSelectResult(){

            clearTimeout(selectTime);
            selectTime = setTimeout(() => {
                let selectedValue = $("#Selected").val().trim();

               if (selectedValue && selectedValue.trim() !== "") {
                    showLoading();

                    $.ajax({
                        url: "@Url.Action("SelectUser", "Admin")",
                        type: "GET",
                        data: { selectedValue: selectedValue },
                        success: function(result) {
                            $("tbody").html(result);
                        },
                        error: function() {
                            showError()
                        }
                    });
                }
            }, 300);
        }
        function showLoading() {
            $("tbody").html('<tr><td colspan="6" class="text-center">Loading...</td></tr>');
        }
        function showError() {
            $("tbody").html('<tr><td colspan="6" class="text-center text-danger">Error loading results</td></tr>');
        }
    </script>
}